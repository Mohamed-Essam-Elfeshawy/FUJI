# Performance Optimizations
GENERATE_SOURCEMAP=false
REACT_APP_OPTIMIZE_BUNDLE=true
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true

# Build Optimizations
REACT_APP_INLINE_RUNTIME_CHUNK=false
REACT_APP_OPTIMIZE_IMAGES=true
REACT_APP_ENABLE_SERVICE_WORKER=true

# Memory Settings
NODE_OPTIONS=--max_old_space_size=4096

# Analytics Configuration (Development - Leave empty)
# Replace with actual IDs in production
REACT_APP_GA_MEASUREMENT_ID=
REACT_APP_GTM_ID=
REACT_APP_FB_PIXEL_ID=
REACT_APP_CLARITY_ID=
REACT_APP_HOTJAR_ID=

# Analytics Configuration (Production Example)
# For FUJI FD Production:
# REACT_APP_GA_MEASUREMENT_ID=G-XXXXXXXXXX  # Get from Google Analytics
# REACT_APP_GTM_ID=GTM-XXXXXXX              # Get from Google Tag Manager
# REACT_APP_FB_PIXEL_ID=123456789012345     # Get from Facebook Business
# REACT_APP_CLARITY_ID=abcdefghij           # Get from Microsoft Clarity
# REACT_APP_HOTJAR_ID=1234567               # Get from Hotjar

# Quick Setup Guide:
# 1. Create accounts for the analytics services you want
# 2. Copy the IDs to the variables above (remove # to uncomment)
# 3. Rebuild the app with: npm run build
# 4. Deploy to production
